{
  "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "lib": [
          "DOM",
          "DOM.Iterable",
          "ESNext"
      ],
      "allowJs": true,
      "jsx": "react-jsx",
      "noEmit": true,
      "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
  },
  "include": [
      "./src/**/**/*"
  ]
}